<div class="modal-dialog">
  <div class="modal-content"> 

    <%= form_with(model: @user, remote: true) do |form| %>
      <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name %>
      </div>

      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>
